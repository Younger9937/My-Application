<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myColor"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="176dp"
        android:layout_marginBottom="200dp"
        android:gravity="center"
        android:text="Welcome!\nI want to know something about you"
        android:textColor="#00008B"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="450dp"
        android:layout_height="150dp">

        <Button
            android:id="@+id/buttonFinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="30dp"
            android:text="Finish!" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="240dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="30dp"
            tools:src="@drawable/no" />

    </RelativeLayout>

    <EditText
        android:id="@+id/editName"
        android:layout_width="181dp"
        android:layout_height="40dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="330dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Your English name"
        android:textSize="15dp"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textName"
        app:layout_constraintTop_toBottomOf="@+id/textTitle" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:text="Name:"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/editName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle" />

    <TextView
        android:id="@+id/textGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:text="Gender:" />

    <RadioGroup
        android:id="@+id/genderGroup"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp">

        <RadioButton
            android:id="@+id/manButton"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Man" />

        <RadioButton
            android:id="@+id/womanButton"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Woman" />
    </RadioGroup>

    <TextView
        android:id="@+id/textHobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:text="Hobby:" />

    <CheckBox
        android:id="@+id/checkDraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:text="Painting"
        android:textColor="#000000"
        android:textSize="15sp" />

    <CheckBox
        android:id="@+id/checkSing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="220dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:text="Singing" />

    <CheckBox
        android:id="@+id/checkDance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:text="Dancing" />

    <CheckBox
        android:id="@+id/checkBall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="220dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:text="Basketball" />

    <TextView
        android:id="@+id/textOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:text="Other:"
        android:textColor="#000000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="15sp"
        android:maxLines="1"
        android:hint="Other hobbies" />

    <TextView
        android:id="@+id/textQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:text="For security,please anwser a question:" />

    <Button
        android:id="@+id/buttonChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:text="Change" />

    <TextView
        android:id="@+id/textMath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="390dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:text="TextView" />

    <EditText
        android:id="@+id/editMath"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="33dp"
        android:ems="10"
        android:hint="Answer"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:textColor="#000000"
        android:textSize="15sp" />

</RelativeLayout>